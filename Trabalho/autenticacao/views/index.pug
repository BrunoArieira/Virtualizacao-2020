extends layout
 
block content
    .w3-container.w3-center.w3-jumbo
        header.w3-container.w3-dark-grey
            h1 Serviço de Autenticação
    .w3-container.w3-large
        .w3-bar.w3-black.w3-mobile
            .w3-bar-item
                form.w3-container(action='/registar', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Registo')
    .w3-container.w3-center
        .w3-card.w3-margin.w3-display-middle.w3-padding-large
            h3.w3-center Login
            form.w3-container(method="POST" action="/")
                input.w3-input(type="text" name="username" placeholder="Username")
                input.w3-input(type="password" name="password" placeholder="Password")
                br
                input.w3-btn.w3-black(type="submit" value="Login")  
    .w3-container.w3-center.w3-bottom
        footer.w3-container.w3-dark-grey
